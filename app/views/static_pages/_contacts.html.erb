<div class="black-bg white page-contact" id="page-contact">
  <div class="container">
    <div style="position: relative; z-index: 2;" id="contact_us" name="contact_us">
      <header>
        </br>
        <h3 style="text-align: center; padding-bottom:10px; border-bottom: solid 1px lightgray;"><%= (t 'contact.contact') %></h3>

        <h1><%= (t 'contact.say_hello') %></h1>

        <div class="row">
          <div class="col-md-12">
            <p style="text-align: center">
              <%= (t 'contact.contact_text') %>
            </p>
          </div>
          <div class="col-md-6">
            <p style="text-align: center">
              <%= render 'contacts/form' %>
            </p>
          </div>
          <div class="col-md-6">
            <div class="span5 offset1">
              <h5><%= (t 'contacts.company_name') %></h5>

              <div class="media">
                <div class="social-icons sicon-white pull-left">
                  <img alt="" src="/assets/phone-white.png" style="width: 23px; height: 23px; margin-top: -4px;">
                </div>
                <div class="media-body smallFontBy08">
                  <%= (t 'contacts.phone_c') %>
                </div>
              </div>
              <div class="media">
                <div class="social-icons sicon-white pull-left">
                  <img alt="" src="/assets/map-marker2-white@2x.png" style="width: 30px; height: 30px; margin-top: -4px;">
                </div>
                <div class="media-body smallFontBy08">
                  <%= (t 'contacts.address_c') %>
                </div>
              </div>
              <div class="media">
                <div class="social-icons sicon-white pull-left">
                  <img alt="" src="/assets/mail-white@2x.png" style="width: 30px; height: 30px; margin-top: -5px;">
                </div>
                <div class="media-body smallFontBy08">
                  info@pectorale.com.ua
                </div>
              </div>
              <div class="media">
                <div class="social-icons sicon-white pull-left">
                  <img alt="" src="/assets/earth-white@2x.png" style="width: 30px; height: 30px; margin-top: -3px;">
                </div>
                <div class="media-body smallFontBy08">
                  www.pectorale.com.ua
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>
    </div>
    <!--<div id="map-image">
      <img src="assets/map_bck.jpg" alt="Treble">
    </div>-->
  </div>
</div>